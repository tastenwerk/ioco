          img.icon.pull-left( src=(typeof(ioco.plugins[i].sidebarBottomWidget) === 'object' && ioco.plugins[i].sidebarWidget.icon ? ioco.plugins[i].sidebarBottomWidget.icon : '/images/app-icons/'+ioco.plugins[i].name.toLowerCase()+'/96x96w.png') )
          span.pull-left.desc=t((ioco.plugins[i].sidebarBottomWidget.overrideName || ioco.plugins[i].name)+'.title')