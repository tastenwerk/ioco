html
  background-color: #333
  font-family: 'OpenSans', sans


#login-content
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 380px
  height: 500px
  margin: auto
  border: 1px solid #aaa
  box-shadow: 0 0 10px #000
  padding: 20px
  background-color: #fff

  #login-logo
    margin: 10px
    img
      width: 150px
      height: 57px

  #login-logo-text
    font-size: 30px
    color: #ccc
    margin: 30px 0 0 120px

  form
    margin-top: 70px

    .desc
      font-size: 12px

    h1
      font-size: 20px
      color: #555

  input[type=text], input[type=password]
    padding: 7px 0
    width: 338px

    &:hover, &:focus
      border-color: #aaa
      color: #333

  a
    font-size: 12px
  a[href='/forgot_password'], a[href='/login']
    margin-right: 10px
    margin-top: 5px
    opacity: 0.5
    &:hover
      opacity: 1

  label
    color: #777
    font-size: 14px
    font-weight: 100