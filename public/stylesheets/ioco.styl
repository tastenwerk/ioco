    background: none
    box-shadow: none
    opacity: 0.8
    border: none
    &:hover
      background: none
      box-shadow: none
      opacity: 1
  &.blue
    IO_GRADIENT(#118be7, #007ad6)
    color: white
    text-shadow: none
    font-weight: 500
    border: 1px solid #118be7
  &.green
