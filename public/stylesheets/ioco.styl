.btn, .dialog-form .k-link
  IO_GRADIENT( #f5f5f5, #f1f1f1 )
  border: 1px solid #DCDCDC
  border-radius: 1px
  color: #333333;
  cursor: pointer;
  font-weight: bold
  padding: 4px 12px
  text-shadow: -1px 1px 0 #FFFFFF
  white-space: nowrap
  border-radius: 1px
  text-decoration: none
  font-size: 12px
  cursor: pointer
  &:hover
    background-color: IO_BUTTON_WHITE_HOVER;
    background-image: -moz-linear-gradient(center top , #F8F8F8, #F1F1F1);
