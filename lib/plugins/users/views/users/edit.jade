.content-padding
  form
    input(type='hidden', name='_csrf', value=_csrf)
    if( currentUser.groups.indexOf('manager') > 0 )
      .pull-right
        h1=t('user.groups.title')
        table
          -each role in ioco.config.userRoles
            tr
              td
                input(type='checkbox', name='user[groups][]', value=role, checked=(user.groups.indexOf(role) < 0 ? false : true) )
              td( style='padding-right: 20px')=t('user.groups.'+role)
    p
      label.desc=t('user.nick')
      br
      input#user-nick.span400( type='text', name='user[name][nick]', value=user.name.nick )
    p
      label.desc=t('user.firstname')
      br
      input#user-first.span400( type='text', name='user[name][first]', value=user.name.first )
    p
      label.desc=t('user.lastname')
      br
      input#user-last.span400( type='text', name='user[name][last]', value=user.name.last )

    p
      label.desc=t('user.email')
      br
      input.span400( type='text', name='user[email]', value=user.email )

    p( style='text-align:right')
      input.btn( type='submit', value=t('save') )